<h1>New group</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <div class="select_users">
        <%=
          select_tag :selector,
          options_from_collection_for_select(User.all, :id, :name),
          {:multiple => true, id: :select_user}
         %>
      </div>

      <%= f.submit "Create my group", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
