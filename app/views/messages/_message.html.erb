<li id="message-<%= message.id %>">
  <span class="user"><%= link_to message.user.name, message.user %></span>
  <span class="content">
    <%= message.content %>
    <%= image_tag message.picture.url if message.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(message.created_at) %> ago.
    <% if current_user?(message.user) %>
      <%= link_to "delete", message, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
